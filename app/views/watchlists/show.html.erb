<div class="user-content">
    <%= render :partial => '/users/aside' %>
        <main class="share-info">
            <h3>
                <div class="wrap">
                    <span>
                        <%= @info.company_name %>
                    </span>
                    <%= link_to "Back", root_path %>
                </div>
            </h3>
            <div class="stock-info">
                <div class="stock-main-stats">
                    <h4>Price: <%= number_to_currency @info.latest_price %></h4>
                    <h4>Change: <%= number_to_currency @info.change %></h4>
                    <h4>Change %: <%= number_to_percentage @info.change_percent * 100 %></h4>
                    <p>Symbol: <%= @info.symbol %></p>
                    <p>Company: <%= @info.company_name %></p>
                    <% if @info.is_us_market_open %>
                    <p>Market: Open</p>
                    <p>High: <%= @info.high %></p>
                    <p>Low: <%= @info.low %></p>
                    <p>Open: <%= @info.open %></p>
                    <p>Close: <%= @info.close raise%></p>
                    <% else %>
                    <p>Market: Close</p>
                    <% end %>
                </div>
