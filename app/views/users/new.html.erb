
<div class="login-container">

    <div class="form">
        <%= render :partial => 'logcontrol' %>

        <% if @user.errors.any? %>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        <% end %>

        <%= simple_form_for @user do |f|%>
        <%= f.input :email, as: :email%>
        <%= f.input :password, as: :password%>
        <%= f.input :password_confirmation %>
        <%= f.submit "Sign Up" %>
        <% end %>
    </div>
