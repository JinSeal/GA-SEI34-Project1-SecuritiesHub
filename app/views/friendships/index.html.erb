

<%= render :partial => '/users/nav' %>

<div class="user-content">
  <%= render :partial => '/posts/aside' %>
  <main class="user-main">
    <div class="friends-main">
      <h3>
        <div class="wrap">
          <span>
            Friends
          </span>
          <%= link_to "Back", posts_path %>
        </div>
      </h3>
      <div id="users">
        <% for user in @users %>
        <div class="user">
            <%= user.username %>
            <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
            <div class="clear"></div>
        </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
